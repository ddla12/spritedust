<interface>
  <object id="window" class="GtkWindow">
    <property name="title">Ziggy editor</property>
    <child>
        <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
                <object class="GtkFrame">
                    <child>
                        <object id="drawing_area" class="GtkDrawingArea" />
                    </child>
                </object>
            </child>
            <child>        
                <object class="GtkActionBar">
                    <child type="start">
                        <object id="color_button" class="GtkColorDialogButton"/>
                    </child>
                </object>
            </child>
        </object>
    </child>
  </object>
</interface>